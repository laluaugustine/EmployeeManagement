
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="page-header">
        <h1><small>Employees</small></h1>
    </div>
<p>
    @Html.ActionLink("Add Employee", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-bordered table-responsive table-condensed table-hover">
    <tr>
        <th>
            Employee ID
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Address
        </th>
        <th></th>
    </tr>
    <tbody data-bind="foreach: Employees">
        <tr>
            <td data-bind="text: EmployeeID"></td>
            <td data-bind="text: FirstName"></td>
            <td data-bind="text: LastName"></td>
            <td data-bind="text: Address"></td>
            <td>
                <a data-bind="attr: { 'href': '@Url.Action("Edit", "Employees")/' + EmployeeID }" class="btn-primary btn glyphicon glyphicon-pencil">Edit</a>
                        
            </td>
        </tr>
    </tbody>
</table>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/knockout-3.5.1.js"></script>
<script src="~/Scripts/KOScripts/KORead.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
